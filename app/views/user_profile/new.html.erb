<section class="content-header">
  <h1>
    User Profile
  </h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-md-12">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Create User Profile</h3>
        </div>
        <%= form_for @user_profile, url: user_profile_index_path, :html => {:class=>'form-horizontal'},  method: :post do |f| %>
          <div class="box-body">
            <%= render partial: 'layouts/error_messages', locals:{ object: f.object} %>
            <div class="form-group">
              <div class="col-md-6 col-sm-6">
                <label>Name *</label>
                <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
              </div>
              <div class="col-md-6 col-sm-6">
                <label>Date of Birth</label>
                <%= f.text_field :dob, class: 'form-control datepicker', placeholder: 'yyyy-mm-dd', readonly: true %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-6 col-sm-6">
                <label>Location *</label>
                <%= f.text_field :location, class: 'form-control required', placeholder: 'Location' %>
              </div>
              <div class="col-md-6 col-sm-6">
                <label>Current Job *</label>
                <%= f.text_field :current_job, class: 'form-control', placeholder: 'Current Job' %>
              </div>
            </div>
            <div class="form-group">
              <div class="col-md-12 col-sm-12">
                <label>Top 3 Skills</label>
              </div>
              <div class="col-md-4 col-sm-4">
                <%= f.text_field :skill_1, class: 'form-control required' %>
              </div>
              <div class="col-md-4 col-sm-4">
                <%= f.text_field :skill_2, class: 'form-control' %>
              </div>
              <div class="col-md-4 col-sm-4">
                <%= f.text_field :skill_3, class: 'form-control' %>
              </div>
            </div>
          </div>
          <div class="box-footer">
            <%= f.submit "Create Profile", class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>