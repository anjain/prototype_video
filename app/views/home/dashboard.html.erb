<section class="content-header">
  <h1>
    User List
  </h1>
</section>
<section class="content">
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-4">
        <div class="box box-widget widget-user-2">
          <div class="widget-user-header <%= cycle('bg-yellow', 'bg-aqua', 'bg-red', 'bg-green') %>">
            <div class="widget-user-image">
              <%= image_tag user.image_url, class: 'img-circle' %>
            </div>
            <h3 class="widget-user-username"><%= user.user_profile.present? ? user.name : user.email %></h3>
            <h5 class="widget-user-desc"><%= user.job %></h5>
          </div>
          <div class="box-footer no-padding">
            <ul class="nav nav-stacked">
              <li><a href="javascript:void(0)">Birthday <span class="pull-right"><%= user.user_profile.present? ? user.user_profile.dob : "Not specified" %></span></a></li>
              <li><a href="javascript:void(0)">Location <span class="pull-right"><%= user.user_profile.present? ? user.user_profile.location : "Not specified" %></span></a></li>
              <li><a href="javascript:void(0)">Best Skills <span class="pull-right"><%= user.user_profile.present? ? user.user_profile.get_skills : "Not specified" %></span></a></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>